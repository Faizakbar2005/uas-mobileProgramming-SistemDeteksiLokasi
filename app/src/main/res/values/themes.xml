<resources>
    <!-- Base application theme. -->
    <style name="Theme.LocationFinder" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/static_main</item>
        <item name="colorPrimaryVariant">@color/colorDarkGrey</item>
        <item name="colorOnPrimary">@color/colorDarkGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/static_main</item>
        <item name="colorSecondaryVariant">@color/colorWhite</item>
        <item name="colorOnSecondary">@color/colorDarkGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>